body {
margin: 0 auto;
}

.inner-banner-text {
  margin: auto;
  width: 50%;
  padding: 7em;

}
.inner-banner-copy {
  font-size: 24px;
}
.inner-banner-cta {
  margin-top: 15px;
  background: #57ad68;
  color: #fff;
  font-size: 20px;
  padding: 15px 25px;
  border-radius: 100px;
  text-decoration: none;
  text-transform: uppercase;
  font-family: 'Roboto';
  font-weight: 300;
}
.inner-banner-cta:hover {
    background: #fff;
    color: #57ad68;
    font-size: 20px;
    padding: 15px 25px;
    border-radius: 100px;
    text-decoration: none;
    text-transform: uppercase;
}
.inner-banner-cta-wrapper {
	position: relative;
    top: 15px;
}
.inner-banner-image {
  background-size: cover;
  min-height: 400px;
  background-repeat: no-repeat;
  display: table-cell;
}
.inner-banner-title {
 font-size: 46px;
  margin-bottom: 0;
  line-height: 1;
}
@media (max-width: 768px) {
    .inner-banner-image {
		min-height: 640px;
     }
    .inner-banner-text {
      display: block;
      text-align: center;
    }
  .inner-banner-title {
   font-size: 36px; 
  }
.inner-banner-copy {
  font-size: 18px;
}
}